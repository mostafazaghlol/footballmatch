<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonStyle">@style/Button_style</item>

        <item name="android:textStyle">bold</item>

        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button_style" parent="Widget.AppCompat.Button">
        <!-- Customize my Button Style -->
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Button_style2" parent="Widget.AppCompat.Button">
        <!-- Customize my Button Style -->
        <item name="android:background">@color/red_color2</item>
    </style>
    <style name="Button_style3" parent="Widget.AppCompat.Button">
        <!-- Customize my Button Style -->
        <item name="android:background">@color/blue_color</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Button_style4" parent="Widget.AppCompat.Button">
        <!-- Customize my Button Style -->
        <item name="android:background">@color/green_color</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_color</item>
        <item name="colorPrimaryDark">@color/red_color2</item>
        <item name="colorAccent">@color/red_color</item>
        <item name="buttonStyle">@style/Button_style2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_color</item>
        <item name="colorPrimaryDark">@color/blue_color2</item>
        <item name="colorAccent">@color/blue_color</item>
        <item name="buttonStyle">@style/Button_style3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme4" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_color</item>
        <item name="colorPrimaryDark">@color/green_color2</item>
        <item name="colorAccent">@color/green_color</item>
        <item name="buttonStyle">@style/Button_style4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

    </style>

</resources>
